# ============================================
# RUSTER REVM - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# ETHEREUM RPC (Required)
# ============================================
# Get free API keys from:
# - Alchemy: https://www.alchemy.com/
# - QuickNode: https://www.quicknode.com/
# - Infura: https://infura.io/

ETH_WSS_URL=wss://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
ETH_HTTP_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# ============================================
# API SERVER (Optional)
# ============================================
RUSTER_HOST=0.0.0.0
RUSTER_PORT=3000

# ============================================
# RATE LIMITING (Optional)
# ============================================
# Requests per minute per API key/IP
RATE_LIMIT_RPM=100

# ============================================
# LOGGING (Optional)
# ============================================
RUST_LOG=info
